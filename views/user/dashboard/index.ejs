<div class="container-fluid container-fluid-custom pb-5 mb-5">

    <div class="row mb-4">
        <div class="col text-center">
            <h1>Hello,<%= fullName %>
            </h1>
        </div>
        <div class="col text-end">
            <a href="/submit-recipe" class="btn btn-outline-primary"> + Your Recipe</a>
        </div>
    </div>

    <div class="row">
        <% if (recipe.length> 0) {for (var i = 0; i < recipe.length; i++) {%>
                <div class="col-sm-3 mb-4">
                        <a href="/dashboard/item<%= recipe[i]._id %>" class="col text-center">
                            <div class="category__img shadow">
                              <img src="/uploads/<%= recipe[i].image %>" alt="<%= recipe.name %>" loading="lazy">
                            </div>
                            <div class="pt-1"><%= recipe[i].name %></div>
                          </a>
                    </div>
        
                <% }} else{ %>
                    <p>No Items Found.</p>
                    <a href="/submit-recipe">Create Recipe</a>
               <% } %>
    </div>

</div>
