<!-- Tampilan FORM login -->
<div class="px-4 py-5 my-5 text-center">
  <h3 class="mb-4">Login</h3>
</div>
<div class="row justify-content-center">
  <!-- pengkondisian -->
  <% if(infoSubmitObj !='' ) { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
    <% } %>

      <% if(infoErrorsObj !='' ) { %>
        <div class="col-8 alert alert-danger" role="alert">
          <%= infoErrorsObj[0].message %>
        </div>
        <% } %>
          <div class="col-8">
            <form action="/login" enctype="application/x-www-form-urlencoded" method="post">

              <div class="mb-3">
                <label for="login-email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control" id="login-email"
                  required>
                <div id="username" class="form-text">We'll never share your username with anyone else.</div>
              </div>
              <div class="mb-3">
                <label for="login-password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="login-password" required
                  minlength="6">
                <div id="login" class="form-text">Password must be at least 6 characters long.</div>
              </div>
              <button type="submit" class="btn btn-outline-primary">Login</button>
              <a href="/register" class="m-2">Create an account</a>
            </form>
            <div class="mt-3">
              <a href="/auth/google" class="btn btn-outline-dark">Login With Google</a>
            </div>
          </div>

</div>
